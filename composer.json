{
    "name": "rudra/view",
    "description": "Rudra framework",
    "type": "library",
    "keywords": [
        "rudra",
        "view",
        "mvc-pattern",
        "mvc"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jagepard",
            "email": "jagepard@yandex.ru",
            "homepage": "https://jagepard.ru",
            "role": "Developer"
        }
    ],
    "support" : {
        "email": "jagepard@yandex.ru",
        "skype": "jagepard.ru"
    },
    "require": {
        "php": ">=8.3",
        "rudra/container": "self.version",
        "rudra/docs": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Rudra\\View\\" : "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rudra\\View\\Tests\\" : "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform-check": false
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
